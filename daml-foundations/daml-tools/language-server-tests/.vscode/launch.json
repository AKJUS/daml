{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug tests",
            "type": "node",
            "request": "launch",
            "stopOnEntry": false,
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": ["--no-timeouts", "--colors", "--debug-brk"],
            "runtimeExecutable": null,
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "build",
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}/lib/**/*.js"]
        }
    ]
}